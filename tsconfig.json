{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@domain/*": ["./src/domain/*"],
      "@main/*": ["./src/main/*"],
      "@external/*": ["./src/external/*"],
    },

  },
  "include": ["src"],
  "exclude": ["node_modules" ,] // "**/*.spec.ts" , "**/*.test.ts" ]
}